<!doctype html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
    </head>
    <body>
        <% if (result.currentUser.system_role.system_role_name.toLowerCase() === 'manager') { %>
        <header aria-label="Manager Header"><%- include('../partials/ManagerHeader.ejs') %></header>
        <% } else if (result.currentUser.system_role.system_role_name.toLowerCase() === 'staff') {
        %>
        <header aria-label="Staff Header"><%- include('../partials/StaffHeader.ejs') %></header>
        <% } %>
        <main class="flex flex-col items-center text-2xl">
            <h1 class="text-4xl font-extrabold leading-loose px-4">My Details</h1>
            <% if (result.errorMessage!=null){ %>
            <br />
            <div role="alert">
                &nbsp;
                <div class="text-2xl bg-red-600 text-white font-bold rounded-t px-4 py-2">
                    Error - <%= result.errorMessage %>
                </div>
                &nbsp;
            </div>
            <% } %> <% if(result.currentUser !=null){ %>
            <div><%- include('../partials/userDetails') %></div>
            <% } %>
        </main>
        <footer><%- include('../partials/footer') %></footer>
    </body>
</html>
