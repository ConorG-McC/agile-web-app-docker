<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <header><%- include('../partials/ManagerHeader.ejs') %></header>
    <main class="flex flex-col items-center p-8">
      <h1 class="text-4xl font-extrabold leading-loose px-4">Assign Staff To A Manager</h1>
      <form action="/managerStaff/add" method="POST">
        <div class="grid grid-cols-2 gap-4"> 

        <!-- Select Manager -->
        <label class="text-xl py-2 mr-2">Select Manager:</label>
        <select name="manager_id" class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80">
          <% managerList.data.forEach(function(row) { %>
            <option value="<%= row.employee_id %>">
              <%= row.first_name %> <%= row.last_name %>
            </option>
          <% }); %>
        </select>

        <!-- Select Staff -->
        <label class="text-xl py-2 mr-2">Select Staff:</label>
        <select name="staff_id" class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80"">
          <% staffList.data.forEach(function(row) { %>
            <option value="<%= row.employee_id %>">
              <%= row.first_name %> <%= row.last_name %>
            </option>
          <% }); %>
        </select>
      </div>
      <div class="flex justify-center space-x-1 mb-4" style="padding: 10px">
        <input 
        class="bg-green-700 hover:bg-green-800 text-white px-2 py-1 sm:px-4 sm:py-2 text-xs sm:text-sm md:text-base lg:text-lg rounded focus:outline-none focus:ring-1 focus:ring-black"
        type="submit" value="Submit" />
        </form>
        </div>
      <% if (typeof errorMessage != "undefined") { %>
        <div role="alert">
          &nbsp;
          <div class="text-2xl bg-red-600 text-white font-bold rounded-t px-4 py-2">
            Error - <%= errorMessage %>
          </div>
          &nbsp;
        </div>
      <% } %>
    </main>
    <footer><%- include('../partials/footer') %></footer>
  </body>
</html>
