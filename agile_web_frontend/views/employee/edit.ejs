<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
    <header><%- include('../partials/ManagerHeader.ejs') %></header>
    <main class="flex flex-col items-center p-8">
        <h1 class="text-4xl font-extrabold leading-loose px-4">Edit Staff</h1>
        <form action="/employee/edit" method="POST" >
            <div class="grid grid-cols-2 gap-4"> 
            <input type="hidden" name="employee_id" value="<%= result.data.employee_id %>">
            
            <!-- First Name -->
                <label class="text-xl py-2 ">First Name:</label>
                <input
                class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80"
                type="text"
                    name="first_name"
                    value="<%= result.data.first_name %>"
                    placeholder="Enter in the format Aaaa"
                    pattern="[A-Z]{1}[A-Za-z ]{1,}"
                    maxlength="20"
                    required
                    autofocus
                >
            
            <!-- Last Name -->
                <label class="text-xl py-2 mr-2">Last Name:</label>
                <input
                class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80"
                type="text"
                    name="last_name"
                    value="<%= result.data.last_name %>"
                    placeholder="Enter in the format Aaaa"
                    pattern="[A-Z]{1}[A-Za-z ]{1,}"
                    maxlength="20"
                    required
                    autofocus
                >
            
            <!-- Username -->
                <label class="text-xl py-2 mr-2">Username:</label>
                <input
                class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80"
                type="text"
                    name="username"
                    value="<%= result.data.username %>"
                    placeholder="Enter in the format Aaaa"
                    pattern="[A-Z]{1}[A-Za-z ]{1,}"
                    maxlength="20"
                    required
                    autofocus
                >
            
            <!-- Password -->
                <label class="text-xl py-2 mr-2">Password:</label>
                <input
                class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80"
                type="password"
                    name="password"
                    value="<%= result.data.password %>"
                    placeholder="Enter in the format Aaaa"
                    pattern="[A-Z]{1}[A-Za-z ]{1,}"
                    maxlength="20"
                    required
                    autofocus
                >
            
            <!-- Job Role -->
                <label class="text-xl py-2 mr-2">Job Role:</label>
                <select name="job_role" class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80">
                    <% jobRoles.data.forEach(function(row) { %>
                        <option value="<%=row.job_role_id%>"
                            <% if(row.job_role_id==result.data.job_role_id)
                                {%>selected<%} %>
                            ><%=row.job_role_name%>
                        </option>
                        <%
                    });
                    %>
                </select>
            
            <!-- System Role -->
                <label class="text-xl py-2 mr-2">System Role:</label>
                <select name="system_role" class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80">
                    <% systemRoles.data.forEach(function(row) { %>
                        <option value="<%=row.system_role_id%>"
                            <% if(row.system_role_id==result.data.system_role_id)
                                {%>selected<%} %>
                            ><%=row.system_role_name%>
                        </option>
                        <%
                    });
                    %>
                </select>
            </div>
            <div class="flex justify-center space-x-1 mb-4" style="padding: 10px">
                <input type="submit" value="Submit"
                class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 text-xl rounded focus:outline-none focus:ring-1 focus:ring-black">
            </div>
        </form>
        <% if (typeof errorMessage != "undefined") { %>
        <div role="alert" class="mt-4">
            &nbsp;
            <div class="text-2xl bg-red-600 text-white font-bold rounded-t px-4 py-2">
                Error - <%= errorMessage %>
            </div>&nbsp;
        </div>
        <% } %>
    </main>
    <footer>
        <%- include('../partials/footer') %>
    </footer>
</body>
</html>
