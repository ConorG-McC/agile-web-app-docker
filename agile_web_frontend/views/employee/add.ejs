<!doctype html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
    </head>
    <body>
        <header><%- include('../partials/ManagerHeader.ejs') %></header>
        <main class="flex flex-col items-center">
            <h1 class="text-4xl font-extrabold leading-loose px-4">Add Staff</h1>
            <form action="/employee/add" method="POST">
                <div class="grid grid-cols-2 gap-4"> 


                    <!-- UserName -->
                <label class="text-xl py-2 ">Username:</label>
                <input 
                class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80"
                type="text"
                name="username"
                value=""
                placeholder="Enter in the format Aaaa"
                pattern="[A-Z]{1}[A-Za-z ]{1,}"
                maxlength="20"
                required
                autofocus
            >

            <!-- Password -->
            <label class="text-xl py-2 mr-2">Password:</label>
            <input 
            class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80"
            type="text"
                name="password"
                value=""
                placeholder="Enter in the format Aaaa"
                pattern="[A-Z]{1}[A-Za-z ]{1,}"
                maxlength="20"
                required
                autofocus
            >

            <!-- First Name -->
            <label class="text-xl py-2 mr-2">First Name:</label>
            <input 
            class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80"
            type="text"
                name="first_name"
                value=""
                placeholder="Enter in the format Aaaa"
                pattern="[A-Z]{1}[A-Za-z ]{1,}"
                maxlength="20"
                required
                autofocus
            >

            <!-- Last Name -->
            <label class="text-xl py-2 mr-2">Last Name:</label>
            <input 
            class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80"
            type="text"
                name="last_name"
                value=""
                placeholder="Enter in the format Aaaa"
                pattern="[A-Z]{1}[A-Za-z ]{1,}"
                maxlength="20"
                required
                autofocus
                >

                <!-- Job Role -->
                <label class="text-xl py-2 mr-2">Job Role:</label>
                <select name="job_role" class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80">
                    <% jobRoles.data.forEach(function(row) { %> 
                    <option value="<%= row.job_role_id %>"><%= row.job_role_name %></option>
                  <% }); %>
                </select>

                <!-- System Role -->
                <label class="text-xl py-2 mr-2">System Role:</label>
                <select name="system_role" class="bg-black text-white px-4 py-2 rounded-lg mb-2 w-80">
                  <% systemRoles.data.forEach(function(row) { %> 
                    <option value="<%= row.system_role_id %>"><%= row.system_role_name %></option>
                  <% }); %>
                </select>
            </div>
            <div class="flex justify-center space-x-1 mb-4" style="padding: 10px">
                <input type="submit" value="Submit"
                class="bg-green-700 hover:bg-green-800 text-white px-4 py-2 text-xl rounded focus:outline-none focus:ring-1 focus:ring-black">
            </div>
            </form>
        </div>
            <% if (typeof errorMessage != "undefined") { %>
                <div role="alert">
                    &nbsp;
                    <div class="text-2xl bg-red-600 text-white font-bold rounded-t px-4 py-2">
                        Error - <%= errorMessage %>
                    </div>
                    &nbsp;
                </div>
            <% } %>
        </main>
        <footer><%- include('../partials/footer') %></footer>
    </body>
</html>
